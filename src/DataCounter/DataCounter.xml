<?xml version="1.0" encoding="utf-8" ?>
<widget id="DataCounter.widget.DataCounter" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>DataCounter</name>
    <description>The description of this widget.</description>

    <icon />

    <properties>
        <property key="RetrieveObject" type="entity">
            <caption>Entity</caption>
            <category>Data source</category>
            <description>The objects to count.</description>
        </property>
        <property key="Constraint" type="entityConstraint" entityProperty="RetrieveObject" required="false">
            <caption>XPath constraint</caption>
            <category>Data source</category>
            <description>The xpath constraint on the entity.</description>
        </property>
        <property key="mfToExecute" type="microflow" required="false" defaultValue="">
            <caption>Microflow</caption>
            <category>Behavior</category>
            <description>The microflow to execute on click.</description>
            <returnType type="Boolean" />
        </property>
        <property key="RefreshRate" type="integer" defaultValue="3000">
            <caption>RefreshRate</caption>
            <category>Behavior</category>
            <description>Minimum refreshrate is 200ms </description>
        </property>
    </properties>
</widget>

